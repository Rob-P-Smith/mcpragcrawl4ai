# Crawl4AI RAG MCP Server Configuration

# Server Configuration
IS_SERVER=true
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Remote Server Configuration (for client mode)
REMOTE_API_URL=https://your-server.com:8080
REMOTE_API_KEY=your-remote-api-key-here

# Local API Authentication (for server mode)
LOCAL_API_KEY=your-local-api-key-here

# Database Configuration
DB_PATH=crawl4ai_rag.db

# Crawl4AI Service
CRAWL4AI_URL=http://localhost:11235

# Security Settings
ENABLE_CORS=true
MAX_REQUEST_SIZE=10485760
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=crawl4ai_api.log